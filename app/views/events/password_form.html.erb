<h1 class='mt-3'>Доступ только по пин-коду</h1>

<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <%= label 'Пин-код', :pincode, class: "mb-1" %>
    <%= text_field_tag :pincode, params[:pincode], class: 'form-control mb-3', placeholder: t('activerecord.attributes.event.pincode') %>
  </div>

  <div class="actions mb-3">
    <%= submit_tag "Сохранить", class: 'btn btn-sm btn-primary' %>
  </div>
<% end %>

<%= link_to 'На главную', events_path %>
