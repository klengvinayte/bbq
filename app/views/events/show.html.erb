<div class="event mt-3">
  <div class="event-info row">
    <div class="col-md-12">
      <div class="thumbnail card bg-image ">
        <%= content_tag 'div', '', class: 'event-background',
                        style: "background-image: url(#{asset_path('event_thumb2.jpg')})" %>
        <div class="mask" style="background-color: rgba(0, 0, 0, 0.6)">
          <div class="d-flex justify-content-center align-items-center h-100">
            <div class=" card-body">
              <div class="caption card-text">
                <div class="event-description">
                  <h1><%= @event.title %></h1>
                  <h3><%= l @event.datetime, format: :long %></h3>
                  <h3><small><%= link_to @event.address,
                                         "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
                  <p><%= @event.description %></p>
                </div>
                <% if current_user_can_edit?(@event) %>

                  <div class="buffer-top">
                    <%= link_to t(".change"), edit_event_path(@event),
                                class: 'btn btn-primary' %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <div class="event-comments buffer-top">

        <%= render partial: 'comments/form',
                   locals: { comment: @new_comment || @event.comments.build } %>
        <div class="buffer-both">
          <%= render partial: 'comments/comment',
                     collection: @event.comments.except(@new_comment) %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="event-owner">
        <h4> <%= t(".inviting_user") %></h4>

        <p><%= render partial: 'users/user', object: @event.user %></p>
      </div>
      <div class="event-subscriptions">
        <h4><%= t(".subscribers") %></h4>
        <div>
          <p>
            <%= render partial: 'subscriptions/subscription',
                       collection: @event.subscriptions.except(@new_subscription) %>
          </p>
        </div>
      </div>
      <div class="event-subscription-form">
        <% unless @event.user == current_user || current_user.subscriptions.find_by(event_id: @event.id) %>
          <h4><%= t(".subscribe") %></h4>
          <div>
            <%= render partial: 'subscriptions/form', locals: {
              subscription: @new_subscription || @event.subscriptions.build
            } %>
          </div>
        <% end %>
      </div>
    </div>

  </div>

</div>
