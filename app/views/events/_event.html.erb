<div class="row col-sm-6 col-md-4 my-2 me-1" >
  <div class="thumbnail card bg-image">
    <%= content_tag 'div', '', class: 'event-background',
                    style: "background-image: url(#{event_thumb(event)})" %>
    <div class="mask h-100" style=" background-color: rgba(0, 0, 0, 0.5)">
      <div class="d-flex justify-content-center align-items-center">
        <div class=" card-body">
          <div class="caption card-text">
            <div class="event-description">
              <h4><%= link_to event.title, event_path(event), class: "link-info" %></h4>
              <p><%= l event.datetime, format: :short %></p>
              <div class="buffer-both"><%= event.address %></div>
            </div>
            <div class="user-avatar">
              <% event.visitors.each do |user| %>
                <%= image_tag user_avatar_thumb(user), class: 'img-icon', title: user.name %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
