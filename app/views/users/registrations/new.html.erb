<h2 class="mt-3">Регистрация</h2>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field my-3">
    <div class="col-sm-5">
      <%= f.label "email", class: "mb-1" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
  </div>


  <div class="col-sm-5">
    <%= f.label "name", class: "mb-1" %><br/>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="field my-3">
    <div class="col-sm-5">
      <%= f.label "password", class: "mb-1" %>
      <% if @minimum_password_length %>
        <em><small>(<%= @minimum_password_length %> символов минимум)</small></em>
      <% end %><br/>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="field my-3">
    <div class="col-sm-5">
      <%= f.label "password_confirmation", class: "mb-1" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions my-3 ">
    <%= f.submit "Зарегистрироваться", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
