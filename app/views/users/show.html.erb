<div class="text-center">
  <h1><%= @user.name %></h1>

  <p><%= image_tag user_avatar(@user), class: "img-fluid rounded user-avatar-main" %></p>

  <% if @user == current_user %>
    <p class="buffer-top btn btn-sm btn-info">
      <%= link_to t(".edit_user"), edit_user_path(@user),
                  class: 'btn btn-default' %>
    </p>
  <% end %>


</div>

<div class="row mb-3">
  <div class="col-md-12">
    <% if @user.events.any? %>
      <h3><%= t(".organized") %></h3>
      <div class="row">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p class="buffer-top"><%= t(".note1") %></p>
    <% end %>
  </div>
</div>
