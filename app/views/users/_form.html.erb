<%= form_for @user, html: { multipart: true } do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="form-group my-3">
    <%= f.label "name", class: "mb-1" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group my-3">
    <%= f.label "email", class: "mb-1" %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div class="form-group mb-3 ">
    <%= f.label :avatar %>
    <p><%= image_tag(@user.avatar.thumb.url) if @user.avatar? %></p>
    <%= f.file_field :avatar %>
  </div>

  <div class="actions">
    <%= f.submit t('.save'), class: 'btn btn-sm btn-primary' %>
    или <%= link_to t('.back'), :back %>
  </div>
<% end %>
