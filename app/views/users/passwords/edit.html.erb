<h2 class="mt-3"><%= t(".change_your_password") %></h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <div class="col-sm-5">
      <%= f.label "password", t(".new_password"), class: "mb-1" %><br/>
      <% if @minimum_password_length %>
        <em><small>(<%= @minimum_password_length %><%= t(".characters_minimum") %>)</small></em><br/>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="field my-3">
    <div class="col-sm-5">
      <%= f.label "password_confirmation", t(".confirm_new_password"), class: "mb-1" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
  </div>

  <div class="actions mb-3">
    <%= f.submit t(".сhange_my_password"), class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
