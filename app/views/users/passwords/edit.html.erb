<h2><%= t(".change_your_password") %></h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label t(".password"), "New password", class: "mb-1" %><br />
    <% if @minimum_password_length %>
      <em><small>(<%= @minimum_password_length %><%= t(".characters_minimum") %>)</small></em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= f.label "password_confirmation", "Confirm new password", class: "mb-1" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions mb-3">
    <%= f.submit t(".сhange_my_password"), class: "btn btn-sm btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
